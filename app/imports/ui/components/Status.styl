@import 'nib'

img
    width 50%

input
    height 2em
    width 100%
    border 0.05em solid rgba(0,0,0,0.4)
    border-radius 0.5em

form 
    width 50%
    display flex

.button01
    width 44%
    background-color rgba(0,0,0,0)
    margin 1.5em 0em
    padding 0.75em
    text-align center
    border 0.05em solid rgba(0,0,0,0.4)
    border-radius 0.5em
    .label
        color rgba(0,0,0,0.4)
        font-family helvetica

.container-status
    display flex 
    flex-direction column
    align-items center
    background-color rgba(0,0,0,0)

.container-status-timeline
    width 50%
    display flex
    flex-direction row
    justify-content space-between

.info
    font-family helvetica
    color rgba(0,0,0,0.4)
    margin 0.25em 0em
